@model passion_project.Models.viewmodel.fulljoin
@{
    ViewBag.Title = "Search";
}
    <div style="float:left; border:2px solid black;width:25%;height:50em;margin:1em;padding:2em;background-color:black">
        <ul>
            <li>
                <a href="https://localhost:44344/post/List" style="color:yellow;">Knowledge Jar</a>
                <ul>
                    <li><a href="https://localhost:44344/post/Add" style="color:yellow">Add More</a></li>
                </ul>
            </li>
            <li>
                <a style="color:yellow;" href="https://localhost:44344/user/List">Users</a>
                <ul>
                    <li><a href="https://localhost:44344/user/Add" style="color:yellow">Sign Up</a></li>
                </ul>
            </li>
            <li>
                <a href="https://localhost:44344/tag/List" style="color:yellow">Tags</a>
                <ul>
                    <li><a href="https://localhost:44344/tag/Add" style="color:yellow">Create Tags</a></li>
                </ul>
            </li>
        </ul>
    </div>

    <div id="search" style="float:right; border:2px solid black;width:70%;height:150em;margin:1em;padding:2em;background-color:lightgrey">
        <!--<h2 style="color:darkgreen;text-align:center">Model.user.user_name</h2>-->
        @foreach (var post in @Model.posts)
        {

            <div style="margin-top:1em"><a style="color:forestgreen;font-size:x-large" href="/post/Show/@post.post_id">@post.post_name</a></div>
            <div style="margin-left:5em">@post.post_description</div>
        }
        @foreach (var tag in @Model.tags)
        {
            <div style="margin-top:1em"><a style="color:darkblue;font-size:x-large" href="/tag/show/@tag.tag_id">@tag.tag_name</a></div>
            <div style="margin-left:5em">@tag.tag_description</div>

        }
        @foreach (var user in @Model.users)
        {
            <h2><a href="/user/show/@user.user_id" style="color:yellow"> @user.user_name </a></h2>
            <div style="margin-top:1em">@user.first_name @user.last_name</div>
         
        }


    </div>


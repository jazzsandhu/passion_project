@model passion_project.Models.viewmodel.showpost
@{
    ViewBag.Title = "Update";
}

    <div style="float:left; border:2px solid black;width:25%;height:50em;margin:1em;padding:2em;background-color:black">
        <ul>
            <li>
                <a href="https://localhost:44344/post/List" style="color:yellow;">Knowledge Jar</a>
                <ul>
                    <li><a href="https://localhost:44344/post/Add" style="color:yellow">Add More</a></li>
                </ul>
            </li>
            <li>
                <a style="color:yellow;" href="https://localhost:44344/user/List">Users</a>
                <ul>
                    <li><a href="https://localhost:44344/user/Add" style="color:yellow">Sign Up</a></li>
                </ul>
            </li>
            <li>
                <a href="https://localhost:44344/tag/List" style="color:yellow">Tags</a>
                <ul>
                    <li><a href="https://localhost:44344/tag/Add" style="color:yellow">Create Tags</a></li>
                </ul>
            </li>
        </ul>
    </div>
    <div style="float:right; border:2px solid black;width:70%;height:50em;margin:1em;padding:2em;background-color:lightgrey">
        <h2 style="color:darkgreen;text-align:center">Edit:</h2>
        <form method="POST" action="/post/Update/@Model.post.post_id">
            <div>
                <label>Tags:</label>
                @foreach (var tag in @Model.tags)
                {
                    <div>
                        <a style="color:green" href="/tag/show/@tag.tag_id">@tag.tag_name</a>
                        <span><a style="color:red" href="/post/DetachTag/@Model.post.post_id?tag_id=@tag.tag_id">X</a></span>
                    </div>
                }
            </div>
            <div>
                <label>Add more tags:</label><br />
                @{
                    foreach (var tag in @Model.all_tag)
                    {
                        <button name="tag_id" id="tag_id" value="@tag.tag_id">
                            <a style="font-size:20px;font-weight:bolder;color:Green" href="/post/AttachTag/@Model.post.post_id?tag_id=@tag.tag_id">@tag.tag_name</a>
                        </button>



                    }
                }
            </div>
            <div>
                <label>Post Name:</label>
                <input class="form-control" type="text" name="post_name" value="@Model.post.post_name" />
            </div>
            <div>
                <label>Post Description:</label>
                <input type="text" class="form-control" name="post_description" value="@Model.post.post_description" />
            </div>


            <div style="font-size:15px">
                <span style="color:black;font-weight:bold">Select username:</span><br />
                <select style="margin-top:1em" id="user_id" type="text" name="user_id">
                    @{
                        foreach (var users in @Model.users)
                        {
                            <option value="@users.user_id">@users.user_name</option>
                        }
                    }
                </select>
            </div>
            <div class="btn-warning" style="margin:1em;text-align:center;">
                <input type="submit" name="submit" class="btn-warning" style="font-size:20px;color:green" value="Update Post" />
            </div>
        </form>
    </div>


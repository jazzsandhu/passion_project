@model passion_project.Models.tag
@{
    ViewBag.Title = "Update";
}
    <div style="float:left; border:2px solid black;width:25%;height:50em;margin:1em;padding:2em;background-color:black">
        <ul>
            <li>
                <a href="https://localhost:44344/post/List" style="color:yellow;">Knowledge Jar</a>
                <ul>
                    <li><a href="https://localhost:44344/post/Add" style="color:yellow">Add More</a></li>
                </ul>
            </li>
            <li>
                <a style="color:yellow;" href="https://localhost:44344/user/List">Users</a>
                <ul>
                    <li><a href="https://localhost:44344/user/Add" style="color:yellow">Sign Up</a></li>
                </ul>
            </li>
            <li>
                <a href="https://localhost:44344/tag/List" style="color:yellow">Tags</a>
                <ul>
                    <li><a href="https://localhost:44344/tag/Add" style="color:yellow">Create Tags</a></li>
                </ul>
            </li>
        </ul>
    </div>
<div style="float:right; border:2px solid black;width:70%;height:50em;margin:1em;padding:2em;background-color:lightgrey">
    <h2 style="color:darkgreen;text-align:center">Edit:</h2>
    <form method="POST" action="/tag/Update/@Model.tag_id">
        <div>
            <label>Tag Name:</label>
            <input class="form-control" type="text" name="tag_name" value="@Model.tag_name" />
        </div>
        <div>
            <label>Tag Description:</label>
            <input type="text" rows="5" cols="100" class="form-control" name="tag_description" value="@Model.tag_description" />
        </div>
        <div class="btn-warning" style="margin:1em;text-align:center;">
            <input type="submit" name="submit" class="btn-warning" style="font-size:20px;color:green" value="Update Tag" />
        </div>
    </form>
</div>


